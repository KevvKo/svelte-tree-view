{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "svelte3"
    ],
    "overrides": [
        {
          "files": ["*.svelte"],
          "processor": "svelte3/svelte3"
        }
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"]
    },
    "ignorePatterns": [ "babel.config.js", "jest.config.js", "rollup.config.js"]
}
